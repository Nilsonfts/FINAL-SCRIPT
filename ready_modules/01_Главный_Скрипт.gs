    const gue = gueAgg.get(phone);
    out[ctIdx + 4] = gue?.visits || 0;
    out[ctIdx + 5] = gue?.total || 0;
    out[ctIdx + 6] = gue?.firstVisit || '';
    out[ctIdx + 7] = gue?.lastVisit || '';
    
    return out;
  });
  
  return { headerOrderedRaw, rows };
}

